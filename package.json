{
  "name": "youtube-mp3",
  "version": "0.4.5",
  "description": "A minimal Electron application for downloading MP3s from YouTube",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder build",
    "publish": "electron-builder build --publish always"
  },
  "repository": "github:hradilserhii/youtube-mp3",
  "license": "MIT",
  "keywords": [
    "Electron",
    "youtube",
    "mp3",
  ],
  "author": {
    "name": "HradilSerhii",
    "url": "https://github.com/hradilserhii"
  },
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^24.0.0",
    "tailwindcss": "^3.2.7"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "browser-id3-writer": "^4.4.0",
    "electron-updater": "^5.2.1",
    "ffmpeg-static": "4.2.7",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^7.0.1",
    "ytdl-core": "^4.11.2",
    "ytpl": "^2.3.0"
  },
  "build": {
    "productName": "Youtube MP3",
    "copyright": "Copyright (c) 2023 HradilSerhii",
    "asarUnpack": [
      "**/app/node_modules/ffmpeg-static/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "distribution"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "hradilserhii",
      "repo": "youtube-mp3"
    }
  }
}
